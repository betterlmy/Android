<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="340px"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    >
<!--    <LinearLayout-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="vertical">-->
    <TextView
        android:id="@+id/thing_date"
        android:layout_width="700px"
        android:layout_height="100px"
        android:text="2020-3-3"
        android:textAlignment="center"
        android:textSize="80px"
        android:textColor="#F83D73"></TextView>

    <TextView
        android:id="@+id/thing_name"

        android:layout_width="700px"
        android:layout_height="220px"
        android:layout_below="@+id/thing_date"
        android:layout_marginTop="0dp"
        android:maxLines="2"
        android:paddingLeft="20px"
        android:text="睡觉睡觉睡觉睡觉睡觉睡觉睡觉"
        android:textColor="#000000"
        android:textSize="90px"></TextView>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="300px"
        android:layout_height="320px"
        android:layout_toEndOf="@+id/thing_date"
        android:layout_toRightOf="@+id/thing_date"
        android:text="完成"
        android:textSize="90px"></Button>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-15dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginBottom="2dp"
        android:background="#000000"></View>
</RelativeLayout>

