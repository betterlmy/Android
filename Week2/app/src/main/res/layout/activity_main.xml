<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<View
    android:layout_width="match_parent"
    android:layout_height="760px"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:background="@color/blueblack"
    android:id="@+id/all"
    />
<View
    android:layout_width="match_parent"
    android:layout_height="1160px"
    app:layout_constraintTop_toBottomOf="@id/all"
    app:layout_constraintLeft_toLeftOf="parent"
    android:background="@color/bg_color"

    />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintTop_toTopOf="@id/head"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/blue"
        android:id="@+id/top"
    />
    <ImageView
        android:id="@+id/head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="35dp"
        android:src="@drawable/head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/head"
        app:layout_constraintLeft_toRightOf="@+id/head"
        android:layout_marginLeft="8dp"
        android:id="@+id/username"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信号:test123"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintLeft_toRightOf="@+id/head"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:id="@+id/account"
        />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/fresh"
        android:src="@drawable/refresh"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/head"
        android:layout_marginRight="35dp"
        android:tint="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/head"
        app:layout_constraintLeft_toLeftOf="@id/head"
        android:layout_marginTop="50dp"
        android:text="有效期:"
        android:textColor="@color/white"
        android:id="@+id/active"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/active"
        app:layout_constraintLeft_toLeftOf="@+id/active"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:text="2022-02-22 22:22:22"
        />

    <View
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/middle"
        app:layout_constraintLeft_toLeftOf="@id/middle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="350dp"
        android:id="@+id/CD"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入CD key" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button

        app:layout_constraintLeft_toRightOf="@id/CD"
        app:layout_constraintTop_toBottomOf="@id/top"
        android:layout_marginTop="15dp"
        android:text="延长"
        android:background="@drawable/shape"
        android:layout_width="50dip"
        android:layout_height="50dip"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/CD"
        android:foregroundGravity="center"
        android:src="@drawable/code"
        android:layout_marginTop="15dp"
        android:id="@+id/code"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/code"
        android:gravity="center"
        android:text="请扫码登陆获取助手"
        android:textColor="@color/blue"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tele"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="400px"
        app:layout_constraintTop_toBottomOf="@id/middle"
        android:layout_marginTop="15dp"
        android:id="@+id/tele"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="我的客服"
    android:textSize="18dp"
    app:layout_constraintLeft_toRightOf="@id/tele"
    app:layout_constraintTop_toBottomOf="@id/middle"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="18dp"
    />
    <View
    android:layout_width="match_parent"
    android:layout_height="150px"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/bottom"
        android:background="@color/white"
    />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/my"
        app:layout_constraintTop_toTopOf="@id/bottom"
        app:layout_constraintLeft_toLeftOf="@id/bottom"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:id="@+id/my"
        android:tint="@color/blue"
        android:tintMode="src_atop"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的"
        app:layout_constraintTop_toBottomOf="@id/my"
        app:layout_constraintLeft_toLeftOf="@id/my"
        android:textColor="@color/blue"
        android:textSize="16dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/zs"
        app:layout_constraintTop_toTopOf="@id/bottom"
        app:layout_constraintRight_toRightOf="@id/bottom"
        android:layout_marginRight="100dp"
        android:layout_marginTop="5dp"
        android:id="@+id/zs"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="助手"
        app:layout_constraintTop_toBottomOf="@id/zs"
        app:layout_constraintLeft_toLeftOf="@id/zs"
        android:textColor="@color/blueblack"
        android:textSize="16dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>