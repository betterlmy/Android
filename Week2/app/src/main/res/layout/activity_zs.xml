<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="700px"
        app:layout_constraintTop_toBottomOf="@id/bg" />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/wx"
    app:layout_constraintTop_toBottomOf="@id/bg"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="20dp"
    android:id="@+id/wx"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/wx"
        app:layout_constraintTop_toBottomOf="@id/wx"
        android:layout_marginLeft="6dp"
        android:text="微信绑定"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xd"
        app:layout_constraintTop_toTopOf="@id/wx"
        app:layout_constraintLeft_toRightOf="@id/wx"
        android:layout_marginLeft="70dp"
        android:id="@+id/xd"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/xd"
        app:layout_constraintTop_toBottomOf="@id/xd"
        android:layout_marginLeft="6dp"
        android:text="用户数据"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bing"
        app:layout_constraintTop_toTopOf="@id/xd"
        app:layout_constraintLeft_toRightOf="@id/xd"
        android:layout_marginLeft="70dp"
        android:id="@+id/Bing"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/Bing"
        app:layout_constraintTop_toBottomOf="@id/Bing"
        android:layout_marginLeft="6dp"
        android:text="分组数据"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bf"
        app:layout_constraintTop_toBottomOf="@id/wx"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:id="@+id/bf"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bf"
        app:layout_constraintTop_toBottomOf="@id/bf"
        android:layout_marginLeft="6dp"
        android:text="改分记录"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/aim"
        app:layout_constraintTop_toTopOf="@id/bf"
        app:layout_constraintLeft_toRightOf="@id/bf"
        android:layout_marginLeft="70dp"
        android:id="@+id/aim"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/aim"
        app:layout_constraintTop_toBottomOf="@id/aim"
        android:layout_marginLeft="6dp"
        android:text="今日对局"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/air"
        app:layout_constraintTop_toTopOf="@id/aim"
        app:layout_constraintLeft_toRightOf="@id/aim"
        android:layout_marginLeft="70dp"
        android:id="@+id/air"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/air"
        app:layout_constraintTop_toBottomOf="@id/air"
        android:layout_marginLeft="20dp"
        android:text="设置"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="280px"
        android:background="@color/bg_color"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintTop_toBottomOf="@id/middle" />

    <ImageView
        android:id="@+id/tele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="400px"
        android:layout_marginBottom="25dp"
        android:src="@drawable/tele"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="28dp"
        android:text="我的客服"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintLeft_toRightOf="@id/tele" />

    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/my"
        app:layout_constraintLeft_toLeftOf="@id/bottom"
        app:layout_constraintTop_toTopOf="@id/bottom"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的"
        android:textColor="@color/blueblack"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@id/my"
        app:layout_constraintTop_toBottomOf="@id/my" />

    <ImageView
        android:id="@+id/zs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="100dp"
        android:src="@drawable/zs"
        android:tint="@color/blue"
        android:tintMode="src_atop"
        app:layout_constraintRight_toRightOf="@id/bottom"
        app:layout_constraintTop_toTopOf="@id/bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="助手"
        android:textColor="@color/blue"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@id/zs"
        app:layout_constraintTop_toBottomOf="@id/zs" />
</androidx.constraintlayout.widget.ConstraintLayout>