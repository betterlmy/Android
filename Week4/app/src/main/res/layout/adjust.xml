<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="52dp"
        android:text="调整进度"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv4"></TextView>

    <SeekBar
        android:id="@+id/seekbar1"
        style="@android:style/Widget.SeekBar"
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:progress="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv4"></SeekBar>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="80dp"
        android:textSize="35sp"
        android:text="0%"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekbar1"></TextView>

    <Button
        android:id="@+id/queding"
        android:layout_width="124dp"
        android:layout_height="85dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="72dp"
        android:text="确定"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv5"></Button>

    <Button
        android:id="@+id/cancle"
        android:layout_width="124dp"
        android:layout_height="85dp"
        android:layout_marginLeft="224dp"
        android:layout_marginTop="72dp"
        android:text="取消"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv5"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>